snippet rd "If statement used for remote debugging."
if ( \$_SERVER['REMOTE_ADDR'] == '${1:`curl https://httpbin.org/ip 2>/dev/null | grep origin | sed 's/[^0-9]*\([0-9.]\{2,\}\)[^0-9]*/\1/'`}' || $_SERVER['HTTP_CF_CONNECTING_IP'] == '$1' || strpos( $_SERVER['HTTP_X_FORWARDED_FOR'], '$1' ) !== false ) {
	${2:echo '<pre><code>' . print_r( array( ${0:''} ), true ) . '</code></pre>';}
}
endsnippet

snippet rpr "print_r() output wrapped in <pre> and <code>."
echo '<pre><code>' . print_r( array( ${0:''} ), true ) . '</code></pre>';
endsnippet
